@model ProductListViewModel
@{ ViewData["Title"] = "Index"; }

<h1>Ürünler</h1>
<hr />
<div class="d-flex justify-content-end">
    <a class="btn btn-success btn-sm mr-2" asp-controller="Admin" asp-action="CreateProduct">Yeni ürün eklemek için basınız</a>
</div><br />

@if (Model.Products.Count() > 0)
{

<table class="table table-bordered">
    <thead>
        <tr>
            <td style="width:30px;">Id</td>
            <td style="width:100px;">Resim</td>
            <td>Ürünün adı</td>
            <td style="width:12px;">Fiyat</td>
            <td style="width:150px;"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
<tr>
    <td>@item.Id</td>
    <td>
        <img src="~/img/@item.ImageUrl" width="80" />
    </td>
    <td>@item.Name</td>
    <td>@item.Price</td>
    <td>
        <a class="btn  btn-sm btn-info mr-2" href="/admin/products/@item.Id">Düzenle</a>
        <form action="/admin/deleteproduct" method="post" style="display:inline;">
            <input type="hidden" name="productId" value="@item.Id" />
            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
        </form>
    </td>
</tr>
}

    </tbody>

</table> }
else
{
<div class="alert alert-warning">
    <h4>No Products</h4>
</div>}


