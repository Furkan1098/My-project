@model CategoryListViewModel
@{ ViewData["Title"] = "CategoryList"; }

<h1>Kategoriler</h1>
<hr />
<div class="d-flex justify-content-end">
    <a class="btn btn-success btn-sm mr-2" asp-controller="Admin" asp-action="CreateCategory">Yeni bir kategori eklemek için basınız</a>
 
</div>
<br />

@if (Model.Categories.Count() > 0)
{

<table class="table table-bordered">
    <thead>
        <tr>
            <td style="width:30px;">Id</td>
            <td style="width:400px;">Ürünün Adı</td>
            <td style="width:130px;"></td>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td>
        <a class="btn btn-info btn-sm mr-2" href="/admin/editcategory/@item.Id">Kategoriye ait ürünleri düzenle</a>
        <form action="/admin/deletecategory" method="post" style="display:inline;">
            <input type="hidden" name="categoryId" value="@item.Id" />
            <button type="submit" class="btn btn-danger btn-sm">Kategoriyi sil</button>
        </form>
    </td>
</tr>
}

    </tbody>

</table> }
else
{
<div class="alert alert-warning">
    <h4>No Products</h4>
</div>}




